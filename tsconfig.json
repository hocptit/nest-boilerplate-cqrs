{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app": [
        "apps/api-gateway/src"
      ],
      "@app/*": [
        "apps/api-gateway/src/*"
      ],
      "@libs/shared": [
        "libs/shared/src"
      ],
      "@libs/shared/*": [
        "libs/shared/src/*"
      ],
      "@libs/infra": [
        "libs/infra/src"
      ],
      "@libs/infra/*": [
        "libs/infra/src/*"
      ],
      "@libs/configs": [
        "libs/configs/src"
      ],
      "@libs/configs/*": [
        "libs/configs/src/*"
      ],
      "@assets": [
        "assets/"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@app/constants": [
        "apps/api-gateway/src/constants"
      ],
      "@app/constants/*": [
        "apps/api-gateway/src/constants/*"
      ],
      "@app/modules": [
        "apps/api-gateway/src/modules"
      ],
      "@app/modules/*": [
        "apps/api-gateway/src/modules/*"
      ],
      "@app/learning": [
        "apps/learning/src"
      ],
      "@app/learning/*": [
        "apps/learning/src/*"
      ],
      "@libs/grpc-client": [
        "libs/grpc-client/src"
      ],
      "@libs/grpc-client/*": [
        "libs/grpc-client/src/*"
      ]
    }
  }
}